{
  "name": "mindfry",
  "version": "0.3.0",
  "description": "High-performance consciousness-inspired memory graph with lazy decay and auto-association",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build && npm run test:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erdemdev/mindfry.git"
  },
  "homepage": "https://github.com/erdemdev/mindfry#readme",
  "bugs": {
    "url": "https://github.com/erdemdev/mindfry/issues"
  },
  "author": "Erdem Arslan",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "memory",
    "graph",
    "reactive",
    "consciousness",
    "lazy-decay",
    "auto-association",
    "typed-array",
    "high-performance"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
